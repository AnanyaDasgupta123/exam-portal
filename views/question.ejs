<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Questions</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<div class="m-4">
    <%- include('admin_navbar') %>
    <br>
    <div class="form container">
    <form method="post" action="question/save">
      <div class="row mb-2">
        <label for="inputcategory" class="col-sm-2 col-form-label">Select Category</label>
        <div class="col-sm-5">
              <select class="form-select" name="cid">
                <option value="0">Select</option>
                <%
                    data.forEach((e)=>{
                %>
                <option value="<%=e.cid%>"><%=e.cname%></option>
                <%
                    })
                %>
            </select>
        </div>
    </div>
    <div class="row mb-2">
        <label for="inputquestion" class="col-sm-2 col-form-label">Question</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="question" id="inputQuestion" placeholder="Enter Question">
        </div>
    </div>
    <div class="row mb-2">
        <label for="inputop1" class="col-sm-2 col-form-label">Option 1</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="op1" id="inputop1" placeholder="Enter Option1">
        </div>
    </div>
    <div class="row mb-2">
        <label for="inputop2" class="col-sm-2 col-form-label">Option2</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="op2" id="inputop2" placeholder="Enter Option2">
        </div>
    </div>
    <div class="row mb-2">
        <label for="inputop3" class="col-sm-2 col-form-label">Option3</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="op3" id="inputop3" placeholder="Enter Option3">
        </div>
    </div>
    <div class="row mb-2">
        <label for="inputop4" class="col-sm-2 col-form-label">Option4</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="op4" id="inputop4" placeholder="Enter Option4">
        </div>
    </div>
    <div class="row mb-2">
        <label for="inputcorrectoption" class="col-sm-2 col-form-label" >Select Correct Option</label>
        <div class="col-sm-5">
              <select class="form-select" name="ca">
                <option value="0">Select</option>
                <option value="a">a</option>
                <option value="b">b</option>
                <option value="c">c</option>
                <option value="d">d</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 offset-sm-2">
            <button type="save" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>
<div class="row mt-5">
        <div class="col-sm-5 offset-sm-2">
    <div class="alert alert-success alert-dismissible fade show">
    <strong> <%=msg%></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
    </div>
    </div>
</form>
</div>
</body>
</html>