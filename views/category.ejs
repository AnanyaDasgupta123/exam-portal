<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Online Exam Portal</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<div class="m-4">
    <%- include('admin_navbar') %>
    <br>
    <div class="form container">
    <form method="post" action="save">
    <div class="row mb-3">
        <label for="inputCategoryID" class="col-sm-2 col-form-label">Category ID</label>
        <div class="col-sm-5">
            <input type="id" class="form-control" name="cid" id="inputCategoryID" placeholder="Enter Category ID">
        </div>
    </div>
    <div class="row mb-2">
        <label for="inputCategoryname" class="col-sm-2 col-form-label">Category Name</label>
        <div class="col-sm-5">
            <input type="text" class="form-control" name="cname" id="inputCategoryname" placeholder="Enter Category Name">
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10 offset-sm-2">
            <button type="save" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <% data.forEach((e)=>{
             %>
            <td><%=e.cid%></td>
            <td><%=e.cname%></td>
            <td><a href="del/category?cid=<%=e.cid%>">
                <i class="fa fa-trash"></i>
            </a></td>
        </tr>  
         <% 
    }) 
    %>  

    </tbody>
</table>
</div>
</body>
</html>