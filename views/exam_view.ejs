<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="m-4">
    <%- include('student_navbar') %>
    </div>
    <form method="post" action="submit_ans">
        <%  let i=1;
          data.forEach((e)=>{ 
            %>
            <input type="hidden" name="txt_<%=i%>" value="<%=e.ca%>">
     <div class="row mb-2">
        <label for="inputquestion" class="col-sm-2 col-form-label">Question<%=i%></label>
        <div class="col-sm-5">
            <%=e.question%>
        </div>
    </div>
    <div class="row mb-2 offset-sm-2">
    <div class="form-check">
  <input class="form-check-input" type="radio" name="ans_<%=i%>" value="A">
  <label class="form-check-label" for="inputop1">a.
    <%=e.op1%>
  </label>
</div>
</div>
     <div class="row mb-2 offset-sm-2">
    <div class="form-check">
  <input class="form-check-input" type="radio" name="ans_<%=i%>"value="B" >
  <label class="form-check-label" for="inputop2">b.
    <%=e.op2%>
  </label>
</div>
</div>
 <div class="row mb-2 offset-sm-2">
    <div class="form-check">
  <input class="form-check-input" type="radio" name="ans_<%=i%>" value="C">
  <label class="form-check-label" for="inputop3">c.
    <%=e.op3%>
  </label>
</div>
</div>
 <div class="row mb-2 offset-sm-2">
    <div class="form-check">
  <input class="form-check-input" type="radio" name="ans_<%=i%>"value="D" >
  <label class="form-check-label" for="inputop4">d.
    <%=e.op4%>
  </label>
</div>
</div>
</div>
<% i++; %> 
<%
    })
%>
         <div class="row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>
</div>
</body>
</html>